{% extends 'base.html.twig' %}

{% block title %}Episode{% endblock %}

{% block body %}
    <h1>Episode</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ episode.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ episode.title }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ episode.number }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ episode.synopsis }}</td>
            </tr>
        </tbody>
    </table>


    <h2>Add comment</h2>

    {{ form_start(form, {'action': path('app_comment_new', {'id': episode.id} ), 'method': 'POST'}) }}
    {{ form_widget(form) }}
    <button type="submit">Ajouter un commentaire</button>
    {{ form_end(form) }}

    {% if episode.comments %}
        {% for comment in episode.comments %}
            {{ comment.comment }}
        {% endfor %}
    {% endif %}


